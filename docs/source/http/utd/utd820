   <СвУчДокОбор ИдОтпр="2BM-participantId1" ИдПол="2BM-7750370234-4012052808304878702630000000000">
      <СвОЭДОтпр ИННЮЛ="6663003127" ИдЭДО="2BM" НаимОрг="АО &quot;ПФ &quot;СКБ Контур&quot;" />
